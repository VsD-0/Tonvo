<Application x:Class="Tonvo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Tonvo" 
             xmlns:view="clr-namespace:Tonvo.MVVM.Views"
             xmlns:vms="clr-namespace:Tonvo.MVVM.ViewModels" 
             StartupUri="MVVM/Views/ShellView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml"/>
                <ResourceDictionary Source="Themes/LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vms:ListViewModel}">
                <view:ListView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:ControlButtonsViewModel}">
                <view:ControlButtonsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:RegistrationApplicantViewModel}">
                <view:RegistrationApplicant/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
